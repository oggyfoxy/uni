<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.isep.eigenflow.ui.TeamManagementController"
      spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Select Member:"/>
        <ComboBox fx:id="memberSelector" prefWidth="200"/>
        <Button fx:id="selectMemberButton" text="Select Member"/>
    </HBox>

    <Button fx:id="viewHistoryButton" text="View History" onAction="#handleViewHistoryClick"/>

    <ListView fx:id="projectHistoryListView"/>
</VBox>
