<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.isep.eigenflow.ui.CalendarController"
      spacing="10" style="-fx-background-color: white;">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Project Calendar" style="-fx-font-size: 18; -fx-font-weight: bold"/>
        <Region HBox.hgrow="ALWAYS"/>
        <ComboBox fx:id="projectSelector" promptText="Select Project"/>
        <DatePicker fx:id="monthPicker"/>
    </HBox>

    <GridPane fx:id="calendarGrid" hgap="5" vgap="5" VBox.vgrow="ALWAYS">
        
    </GridPane>
</VBox>