<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.isep.eigenflow.ui.CreationPersonnelController">
    <children>
        <HBox prefHeight="81.0" prefWidth="800.0" />
        <HBox alignment="CENTER" prefHeight="384.0" prefWidth="800.0">
            <children>
                <VBox prefHeight="400.0" prefWidth="167.0" spacing="60.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Employee Id" wrappingWidth="66.10275268554688" />
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name" />
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Position" />
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Email" />
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Phone Number" />
                    </children>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </VBox>
                <VBox prefHeight="400.0" prefWidth="302.0" spacing="50.0">
                    <children>
                        <TextField fx:id="employeeIdField" />
                        <TextField fx:id="nameField" />
                        <TextField fx:id="positionField" />
                        <TextField fx:id="emailField" />
                        <TextField fx:id="phoneNumberField" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
            <children>
                <Button fx:id="addEmployeeButton" mnemonicParsing="false" onAction="#handleAddEmployee" text="Add Employee" />
                <Button fx:id="findEmployeeButton" mnemonicParsing="false" onAction="#handleFindEmployee" text="Find a Personnel Member" />
                <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClear" text="Clear" />
            </children>
        </HBox>
    </children>
</VBox>
