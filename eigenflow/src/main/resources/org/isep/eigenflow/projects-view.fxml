<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.isep.eigenflow.ui.ProjectsViewController"
      spacing="10" style="-fx-background-color: white;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="titleLabel" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <TableView fx:id="projectTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" text="Project Name"/>
            <TableColumn fx:id="deadlineColumn" text="Deadline"/>
            <TableColumn fx:id="membersColumn" text="Team Members"/>
            <TableColumn fx:id="progressColumn" text="Progress"/>
            <TableColumn fx:id="actionsColumn" text="Actions"/>
        </columns>
    </TableView>
</VBox>